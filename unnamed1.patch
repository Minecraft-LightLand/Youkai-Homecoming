+		if (pot && random.nextFloat() < 0.5F || steam && random.nextFloat() < 0.2F) {
+			x = (double) pos.getX() + 0.5 + (random.nextDouble() * 0.6 - 0.3);
+			z = (double) pos.getZ() + 0.5 + (random.nextDouble() * 0.6 - 0.3);
